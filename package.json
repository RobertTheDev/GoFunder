{
    "name": "gofunder",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "n": "ts-node --transpile-only --compiler-options '{\"module\":\"CommonJS\"}' ./src/app/api/graphql/schema",
        "build": "npm run build:nexus-typegen && next build",
        "commit": "git-cz",
        "dev": "next dev",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "lint:style": "npx stylelint '**/*.css'",
        "lint-staged": "lint-staged",
        "prepare": "husky install",
        "start": "next start",
        "test": "jest",
        "text:e2e": "npx playwright test"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "eslint --fix",
            "eslint",
            "prettier --write"
        ],
        "*.css": [
            "npx stylelint"
        ],
        "*.json": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@apollo/client": "^3.9.5",
        "@apollo/experimental-nextjs-app-support": "^0.8.0",
        "@apollo/server": "^4.10.0",
        "@as-integrations/next": "^3.0.0",
        "@graphql-tools/merge": "^9.0.3",
        "@graphql-tools/schema": "^10.0.3",
        "@hookform/resolvers": "^3.3.4",
        "@playwright/test": "^1.41.2",
        "@prisma/client": "5.10.2",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "framer-motion": "^11.0.8",
        "graphql": "^16.8.1",
        "graphql-tag": "^2.12.6",
        "ioredis": "^5.3.2",
        "next": "14.1.0",
        "next-nprogress-bar": "^2.3.1",
        "react": "^18",
        "react-confetti": "^6.1.0",
        "react-dom": "^18",
        "react-hook-form": "^7.50.1",
        "react-icons": "^5.0.1",
        "react-loading-skeleton": "^3.4.0",
        "stytch": "^10.5.0",
        "usehooks-ts": "^2.15.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.6.1",
        "@commitlint/config-conventional": "^18.6.2",
        "@swc/plugin-styled-components": "^1.5.118",
        "@testing-library/react": "^14.2.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "14.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-security": "^2.1.1",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-sonarjs": "^0.24.0",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "jsdom": "^24.0.0",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "prisma": "^5.10.2",
        "sass": "^1.71.1",
        "stylelint": "^16.2.1",
        "stylelint-config-standard": "^36.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5"
    }
}
